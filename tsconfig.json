{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@convex/*": ["convex/_generated/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": ["app", "convex"]
}
